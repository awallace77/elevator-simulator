#include "Door.h"
#include "ui_Door.h"

Door::Door(QWidget *parent) : QWidget(parent), ui(new Ui::Door) {
    ui->setupUi(this);

    this->open = false;
    this->doorState = new DoorState();
    this->msg = doorState->closed;
}

Door::~Door() {
    delete ui;
    delete doorState;
}

void Door::closeDoor() {
    this->open = false;
    this->msg = doorState->closed;
    ui->doorGroupBox->setText(this->msg);
}

bool Door::isOpen() {
    return this->open;
}


